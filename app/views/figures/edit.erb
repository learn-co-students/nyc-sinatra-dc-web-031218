
    <h1>Edit Figure</h1>

    <form action="/figures/<%= @figure.id %>" method="post">
      Name: <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br><br>
      Titles:<br><br>
      <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>/>
        <%= title.name %><br>
        <br>
      <%end%>
      <br><br>

      Create a New Title:<br><br>
      <input type="text" name="title[name]" id="new_title"><br><br>

      Landmarks:<br><br>
      <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>/>
        <%= landmark.name %><br>
        <br>
      <%end%>
      <br><br>
        Create a New Landmark:<br><br>
        <input type="text" name="landmark[name]" id="new_landmark"><br><br>


      <input type="hidden" name="_method" value="patch">
      <input type="submit" value="Edit Figure">
    </form>
