
    <h1>Create New Figure</h1>

    <form action="/figures" method="post">
      Name: <input type="text" name="figure[name]" id="figure_name"><br><br>
      Titles:<br><br>
      <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]"  value="<%= title.id %>" id="title_<%= title.id%>"/>
        <%= title.name %><br>
        <br>
      <%end%>
      <br><br>

      Create a New Title:<br><br>
      <input type="text" name="title[name]" id="new_title"><br><br>

      Landmarks:<br><br>
      <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id%>"/>
        <%= landmark.name %><br>
        <br>
      <%end%>
      <br><br>
        Create a New Landmark:<br><br>
        <input type="text" name="landmark[name]" id="new_landmark"><br><br>



      <input type="submit" value="Create New Figure">
    </form>
