
    <h1>All Landarks</h1>
    <% @landmarks.each do |landmark| %>
    <ul>
      <h3><%= landmark.name %></h3>
      <li><%= landmark.year_completed %></li>
      <% if landmark.figure %>
      <li><%= landmark.figure.name%></li>
      <% end %>
      <div><a href="/landmarks/<%=landmark.id%>/edit">Edit</a></div>
    </ul>
    <% end %>
